<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCoffeeScreen">

    <Button
        android:id="@+id/AddCBackToSysAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Back"
        android:background="@drawable/roundedbutton"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addNewCoffee"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Coffee Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newCoffeeDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newCoffeeDesc"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newCoffeePrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newCoffeePrice"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Cost (decimal)"
        android:inputType="numberDecimal"

        app:layout_constraintBottom_toTopOf="@+id/addNewCoffeeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addNewCoffeeBtn"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/roundedbutton"
        android:text="Add New Coffee"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/AddCBackToSysAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>