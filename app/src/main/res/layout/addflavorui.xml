<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFlavorScreen">

    <Button
        android:id="@+id/AddFBackToSysAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Back"
        android:background="@drawable/roundedbutton"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addNewFlavor"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Flavor Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newFlavorDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newFlavorDesc"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newFlavorPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newFlavorPrice"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Cost (decimal)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/addNewFlavorBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/newFlavorName_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/addNewFlavor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/addNewFlavor"/>
    <TextView
        android:id="@+id/newFlavorDesc_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/newFlavorDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/newFlavorDesc"/>
    <TextView
        android:id="@+id/newFlavorPrice_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/newFlavorPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/newFlavorPrice"/>

    <Button
        android:id="@+id/addNewFlavorBtn"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/roundedbutton"
        android:text="Add New Flavor"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/AddFBackToSysAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>