<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToppingScreen">

    <Button
        android:id="@+id/AddTBackToSysAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Back"
        android:background="@drawable/roundedbutton"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addNewTopping"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Topping Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newToppingDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newToppingDesc"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/newToppingPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newToppingPrice"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Cost (decimal)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/addNewToppingBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/newToppingName_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/addNewTopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/addNewTopping"/>
    <TextView
        android:id="@+id/newToppingDesc_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/newToppingDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/newToppingDesc"/>
    <TextView
        android:id="@+id/newToppingPrice_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/newToppingPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/newToppingPrice"/>

    <Button
        android:id="@+id/addNewToppingBtn"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/roundedbutton"
        android:text="Add New Topping"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/AddTBackToSysAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>